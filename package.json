    "jsdom": "^27.2.0",
    "node-addon-api": "^8.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "storybook": "^10.1.4",
    "svg-path-properties": "^2.0.0",
    "tailwindcss": "^4.1.17",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
