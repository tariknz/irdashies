{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@irdashies/storybook": ["./.storybook"],
      "@irdashies/utils/*": ["./src/frontend/utils/*"],
      "@irdashies/context": ["./src/frontend/context"],
      "@irdashies/types": ["./src/types"]
    },
    "types": ["vite/client"]
  }
}
